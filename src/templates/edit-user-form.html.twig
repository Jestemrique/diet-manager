<h2>Edit User</h2>
<hr>

<p>User</p>
<p>user_id: {{user.user_id}}</p>
<p>user_name: {{user.user_name}}</p>

<hr>


<div class="container ">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <form   action="admin.php?page=user-form" method="POST">

                <input type="hidden" name="user_id" id="inputId"  value="{{ user.user_id }}">

                <div class="form-group row mb-3">
                    <div class="col-sm-4">
                        <label for="inputNombre">Nombre</label>
                        <input type="text" class="form-control" name="user_name" id="inputNombre" placeholder="Nombre" value="{{ user.user_name }}">
                    </div>
                    <div class="col-sm-8">
                        <label for="inputApellidos">Apellidos</label>
                        <input type="text" class="form-control" name="user_apellidos" id="inputApellidos" placeholder="Apellidos" value="{{ user.user_apellidos }}">
                    </div>
                </div>


                <div class="form-group row mb-3">
                    <div class="col-sm-4">
                        <label for="inputTelefono">Teléfono</label>
                        <input type="text" class="form-control" name="user_telefono" id="inputTelefono" placeholder="Teléfono" value="{{ user.user_telefono }}">
                    </div>
                    <div class="col-sm-8">
                        <label for="inputEmail">Email</label>
                        <input type="email" class="form-control" name="user_email" id="inputEmail" placeholder="Email" value="{{ user.user_email }}">
                    </div>
                </div>


                <div class="form-group row mb-3">
                    <div class="col-sm-12">
                        <label for="inputDireccion">Direccion</label>
                        <input type="text" class="form-control" name="user_direccion" id="inputDireccion" placeholder="Direccion" value="{{ user.user_direccion }}">
                    </div>
                </div>


                <div class="form-group row mb-3">
                    <div class="col-sm-4">
                        <label for="inputProvincia">Provincia</label>
                        <input type="text" class="form-control" name="user_provincia" id="inputProvincia" placeholder="Provincia" value="{{ user.user_provincia }}">
                    </div>
                    <div class="col-sm-6">
                        <label for="inputLocalidad">Localidad</label>
                        <input type="text" class="form-control" name="user_localidad" id="inputLocalidad" placeholder="Localidad" value="{{ user.user_localidad }}">
                    </div>
                    <div class="col-sm-2">
                        <label for="inputCodigoPostal">Código postal</label>
                        <input type="text" class="form-control" name="user_cp" id="inputCodigoPostal" placeholder="Código postal" value="{{ user.user_cp }}">
                    </div>
                </div>

                <input type="hidden" id="_wpnonce" name="_wpnonce" value="{{nonce}}" />
                <button type="submit" class="btn btn-primary px-4 float-right">Guardar</button>
            </form>
        </div>
    </div>
</div>

